.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-cube
        | Project name
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/' id='home-link') Home
        li(class=(title == 'API Examples') ? 'active' : undefined)
          a(href='/api' id='api-link') API Examples
        li(class=(title == 'Contact') ? 'active' : undefined)
          a(href='/contact' id='contact-link') Contact
        li
          a(href='/status' id='status-link') Status
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login' id='login-link') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup'  id='signup-link') Create Account
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account' id='account-link') My Account
              li.divider
              li
                a(href='/logout' id='logout-link') Logout




